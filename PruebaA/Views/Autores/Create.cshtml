@model PruebaA.Models.Autores

@{
    ViewData["Title"] = "Crear Autor";
}

<div class="container mt-5">
    <h1 class="text-center text-info">Crear Autor</h1>
    <h4 class="text-center">Complete los campos para crear un nuevo autor</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-4 rounded shadow-sm">
            <form asp-action="Create">
                <!-- Mostrar errores de validación del modelo -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="id" class="form-control" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pais" class="control-label">País</label>
                    <input asp-for="Pais" class="form-control" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                </div>
            </form>

            <!-- Volver a la lista de autores -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
