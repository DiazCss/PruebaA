@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 ">📚 Bienvenido</h1>

    <div class="mt-4">
        <!-- Botón para ir a Autores -->
        <a href="/Autores" class="btn btn-dark btn-lg shadow me-3" style="font-size: 18px; padding: 12px 25px; border-radius: 50px; background-color: #3b3b3b;">
            📖 Autores
        </a>

        <!-- Botón para ir a Libros -->
        <a href="/Libros" class="btn btn-primary btn-lg shadow" style="font-size: 18px; padding: 12px 25px; border-radius: 50px; background-color: #007bff;">
