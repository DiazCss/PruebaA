@model PruebaA.Models.Libros

@{
    ViewData["Title"] = "Editar Libro";
}

<div class="container mt-5">
    <h1 class="text-center text-info">Editar Libro</h1>
    <h4 class="text-center">Complete los campos para editar el libro</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-4 rounded shadow-sm">
            <form asp-action="Edit">
                <!-- Mostrar errores de validación del modelo -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AutorId" class="control-label">Autor</label>
                    <select asp-for="AutorId" asp-items="ViewBag.Autores" class="form-control">
                        <option value="">Seleccione un autor</option> <!-- Opción por defecto -->
                    </select>
                    <span asp-validation-for="AutorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Editorial" class="control-label">Editorial</label>
                    <input asp-for="Editorial" class="form-control" />
                    <span asp-validation-for="Editorial" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Edicion" class="control-label">Edición</label>
                    <input asp-for="Edicion" class="form-control" />
                    <span asp-validation-for="Edicion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Clasificacion" class="control-label">Clasificación</label>
                    <input asp-for="Clasificacion" class="form-control" />
                    <span asp-validation-for="Clasificacion" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
                </div>
            </form>

            <!-- Volver a la lista de libros -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
