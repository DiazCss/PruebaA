@model IEnumerable<PruebaA.Models.Libros>

@{
    ViewData["Title"] = "Lista de Libros";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📚 Lista de Libros</h2>
        <a asp-action="Create" class="btn btn-success shadow">➕ Agregar Libro</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Autor</th>
                    <th>Título</th>
                    <th>Editorial</th>
                    <th>Edición</th>
                    <th>Clasificación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(item.autores != null ? item.autores.Nombre : "Sin autor")</td>
                        <td>@item.Titulo</td>
                        <td>@item.Editorial</td>
                        <td>@item.Edicion</td>
                        <td>@item.Clasificacion</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .btn {
        font-size: 14px;
        font-weight: 500;
        transition: 0.3s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
